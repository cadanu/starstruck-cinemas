<?xml version="1.0" encoding="UTF-8"?>
<!-- // connection pooling reference: https://www.viralpatel.net/database-connection-pooling-tomcat-eclipse-db/ -->
<Context>
	<Resource 
		name="jdbc/starstruckcinemas" 
		auth="Container"
		type="javax.sql.DataSource" 
		username="root" 
		password="1234"
		driverClassName="com.mysql.cj.jdbc.Driver"
		url="jdbc:mysql://localhost:3306/starstruckcinemas"
		maxTotal="8" 
		maxIdle="10"
		maxWaitMillis="100"
	/>
</Context>